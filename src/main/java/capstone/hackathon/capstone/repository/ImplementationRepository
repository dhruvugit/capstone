package com.capstone.hackthon.repository;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.capstone.hackthon.entities.Implementation;

import jakarta.transaction.Transactional;

@Repository("implementationRepository")
public interface ImplementationRepository extends JpaRepository<Implementation, Integer>{
    Optional<Implementation> findByTeam_TeamId(int teamId);
    
    @Modifying
    @Transactional
    @Query("UPDATE Implementation i SET i.field1 = :newField1, i.field2 = :newField2 WHERE i.team.teamId = :teamId")
    void updateImplementationFields(@Param("teamId") int teamId, @Param("newField1") String newField1, @Param("newField2") String newField2);

}
